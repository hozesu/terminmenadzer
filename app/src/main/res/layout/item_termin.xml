<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/terminContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:orientation="vertical"
    android:background="@drawable/termin_border"
    android:padding="8dp">

    <TextView
        android:id="@+id/txtVreme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="08:00"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txtPacijent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:visibility="gone"
        android:text="Ime Prezime 0601234567"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txtKomentar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#666"
        android:visibility="gone"
        android:gravity="center"
        android:text="Komentar za termin" />

    <TextView
        android:id="@+id/txtKomentar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#666666"
        android:paddingTop="4dp"
        android:visibility="gone"
        android:text="Komentar za termin" />
</LinearLayout>
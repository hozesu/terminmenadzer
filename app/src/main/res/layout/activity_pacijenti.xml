<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@android:color/white"
    android:layout_marginBottom="4dp">

    <TextView
        android:id="@+id/txtImePrezime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ime Prezime"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txtBroj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Broj telefona"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/btnListaPacijenata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lista pacijenata" />
    <Button
        android:id="@+id/btnPretragaPacijenataPacijenti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pretraga pacijenata" />
    <Button
        android:id="@+id/btnDodajPacijenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dodaj pacijenta" />
    <Button
        android:id="@+id/btnNazadGlavniMeniPacijenti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nazad Na Glavni Meni" />
</LinearLayout>